<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Stok73.ViewModels"
             xmlns:models="clr-namespace:Stok73.Models"
             xmlns:fonts="clr-namespace:Fonts"
             x:Class="Stok73.Pages.StockPage"
             x:DataType="viewModels:StockPageViewModel"
             Title="Stok Yönetimi">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="SummaryValueStyle" TargetType="Label">
                <Setter Property="FontSize" Value="22" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="#111827" />
            </Style>

            <Style x:Key="SummaryCaptionStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="#6B7280" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F8FAFC" Offset="0" />
            <GradientStop Color="#EEF2FF" Offset="1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="24,24,24,40" Spacing="24">
            <VerticalStackLayout Spacing="4">
                <Label Text="Stok Durumu"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1E293B" />
                <Label Text="Kritik cihaz stoklarını tek yerden yönet"
                       FontSize="14"
                       TextColor="#475569" />
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="18" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{Binding TotalQuantity}"
                               Style="{StaticResource SummaryValueStyle}" />
                        <Label Text="Toplam Adet"
                               Style="{StaticResource SummaryCaptionStyle}" />
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Column="1"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="18" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{Binding DistinctMaterialCount}"
                               Style="{StaticResource SummaryValueStyle}" />
                        <Label Text="Stoktaki Kalem"
                               Style="{StaticResource SummaryCaptionStyle}" />
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="16">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18" />
                </Border.StrokeShape>
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                    <Border WidthRequest="48"
                            HeightRequest="48"
                            BackgroundColor="#2563EB"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <Ellipse />
                        </Border.StrokeShape>
                        <Label Text="&#xF1B9;"
                               FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                               FontSize="24"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TextColor="White" />
                    </Border>
                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="En Yakın Son Kullanım"
                               FontSize="14"
                               TextColor="#475569" />
                        <Label Text="{Binding NextExpiryDisplay}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#0F172A" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <SearchBar Placeholder="Malzeme, lot ya da UBB kodu ara"
                       Text="{Binding SearchText}"
                       BackgroundColor="White"
                       FontSize="14"
                       Margin="0,4,0,0" />

            <VerticalStackLayout Spacing="8">
                <Label Text="Filtreler"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#1F2937" />
                <CollectionView ItemsSource="{Binding Filters}"
                                SelectionMode="None"
                                HeightRequest="56">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"
                                           ItemSpacing="12" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:FilterOption">
                            <Border x:Name="FilterChip"
                                    Padding="12,8"
                                    StrokeThickness="1"
                                    Stroke="{Binding StrokeColor}"
                                    BackgroundColor="{Binding BackgroundColor}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20" />
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleFilterCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                                <HorizontalStackLayout Spacing="8"
                                                      VerticalOptions="Center">
                                    <Border x:Name="Indicator"
                                            WidthRequest="8"
                                            HeightRequest="8"
                                            BackgroundColor="{Binding IndicatorColor}"
                                            StrokeThickness="0"
                                            VerticalOptions="Center">
                                        <Border.StrokeShape>
                                            <Ellipse />
                                        </Border.StrokeShape>
                                    </Border>
                                    <Label x:Name="FilterLabel"
                                           Text="{Binding Label}"
                                           FontSize="13"
                                           TextColor="{Binding TextColor}" />
                                </HorizontalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="Filtreleri Temizle"
                        Command="{Binding ClearFiltersCommand}"
                        IsVisible="{Binding HasActiveFilters}"
                        BackgroundColor="Transparent"
                        TextColor="#2563EB"
                        BorderColor="#2563EB"
                        BorderWidth="1"
                        CornerRadius="16"
                        HeightRequest="44" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="12"
                                 IsVisible="{Binding HasResults}"
                                 BindableLayout.ItemsSource="{Binding VisibleGroups}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:StockGroup">
                        <Border StrokeThickness="0"
                                BackgroundColor="White"
                                Padding="20"
                                Margin="0,0,0,12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="22" />
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="16">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#1E293B" />
                                    <Label Grid.Column="1"
                                           Text="{Binding TotalQuantity, StringFormat='Toplam {0} adet'}"
                                           FontSize="14"
                                           TextColor="#64748B"
                                           HorizontalTextAlignment="End" />
                                </Grid>
                                <VerticalStackLayout Spacing="12"
                                                     BindableLayout.ItemsSource="{Binding Items}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate x:DataType="models:StockItem">
                                            <Border StrokeThickness="1"
                                                    Stroke="#E2E8F0"
                                                    Padding="12">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="16" />
                                                </Border.StrokeShape>
                                                <Grid ColumnDefinitions="*,Auto"
                                                      RowDefinitions="Auto,Auto,Auto"
                                                      ColumnSpacing="12">
                                                    <Label Text="{Binding MaterialName}"
                                                           FontAttributes="Bold"
                                                           TextColor="#0F172A" />
                                                    <Border Grid.Column="1"
                                                            BackgroundColor="#DBEAFE"
                                                            StrokeThickness="0"
                                                            Padding="8,4">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="12" />
                                                        </Border.StrokeShape>
                                                        <Label Text="{Binding Quantity}"
                                                               FontSize="13"
                                                               TextColor="#1D4ED8"
                                                               FontAttributes="Bold" />
                                                    </Border>
                                                    <Label Grid.Row="1"
                                                           Text="Seri/Lot: {Binding SerialLotNumber}"
                                                           FontSize="13"
                                                           TextColor="#475569" />
                                                    <Label Grid.Row="1"
                                                           Grid.Column="1"
                                                           Text="UBB: {Binding UbbCode}"
                                                           FontSize="13"
                                                           TextColor="#475569"
                                                           HorizontalTextAlignment="End" />
                                                    <Label Grid.Row="2"
                                                           Text="{Binding Manufacturer} • {Binding Location}"
                                                           FontSize="12"
                                                           TextColor="#64748B" />
                                                    <Label Grid.Row="2"
                                                           Grid.Column="1"
                                                           Text="SKT: {Binding ExpiryDate, StringFormat='{0:dd.MM.yyyy}'}"
                                                           FontSize="12"
                                                           TextColor="#DC2626"
                                                           HorizontalTextAlignment="End" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="24"
                    IsVisible="{Binding IsEmpty}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Label Text="Kayıt bulunamadı"
                           FontAttributes="Bold"
                           TextColor="#0F172A" />
                    <Label Text="Aramanızı veya filtrelerinizi güncelleyerek tekrar deneyin."
                           FontSize="13"
                           TextColor="#64748B"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
