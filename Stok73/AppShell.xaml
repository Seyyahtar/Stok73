<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Stok73.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Stok73.Pages"
    Title="Stok73">

    <ShellContent
        Title="Ana Sayfa"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="home" />
    <ShellContent
        Title="Vaka"
        ContentTemplate="{DataTemplate pages:CasePage}"
        Route="case" />
    <ShellContent
        Title="Geçmiş"
        ContentTemplate="{DataTemplate pages:HistoryPage}"
        Route="history" />
    <ShellContent
        Title="Kontrol"
        ContentTemplate="{DataTemplate pages:ChecklistPage}"
        Route="checklist" />
    <ShellContent
        Title="Ayarlar"
        ContentTemplate="{DataTemplate pages:SettingsPage}"
        Route="settings" />
</Shell>
